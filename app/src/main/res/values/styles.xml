<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="orangeButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="image_chat">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:src">@drawable/chat</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <dimen name="h4TextSize">35sp</dimen>
    <dimen name="h2TextSize">17sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>


    <dimen name="image_width">150dp</dimen>
    <dimen name="image_height">150dp</dimen>


</resources>